{
    "manifest_version": 3,
    "name": "Purdue Brightspace Campus Autoselect",
    "version": "1.0",
    "description": "Automatically clicks on your campus every time you load Purdue Brightspace",
    "permissions": [
        "tabs",
        "activeTab",
        "http://*/",
        "https://*/",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://purdue.brightspace.com/d2l/login*"
            ],
            "js": [
                "autoload.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "options.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "purdue-brightspace-campus-firefox-addon@ericswpark.com"
        }
    }
}